{
  "name": "@micro-os-plus/micro-test-plus",
  "version": "2.0.4",
  "description": "A source xPack with ÂµTest++, a minimalistic testing infrastructure",
  "main": "",
  "scripts": {
    "comment_": "echo ctest -V shows test output; cmake --verbose shows the build commands",
    "link-deps": "xpm link @micro-os-plus/build-helper @micro-os-plus/platform-stm32f4discovery @micro-os-plus/devices-stm32f4-extras @micro-os-plus/architecture-cortexm @micro-os-plus/startup @micro-os-plus/semihosting @micro-os-plus/diag-trace @micro-os-plus/libs-c @micro-os-plus/libs-cpp @micro-os-plus/version",
    "rm-deps": "xpm uninstall --global @micro-os-plus/build-helper @micro-os-plus/platform-stm32f4discovery @micro-os-plus/devices-stm32f4-extras @micro-os-plus/architecture-cortexm @micro-os-plus/startup @micro-os-plus/semihosting @micro-os-plus/diag-trace @micro-os-plus/libs-c @micro-os-plus/libs-cpp @micro-os-plus/version",
    "build-stm32f4discovery-cmake-debug": "cmake -S tests/meta -B build/tests-stm32f4discovery-cmake-debug -GNinja -DCMAKE_TOOLCHAIN_FILE=../../xpacks/micro-os-plus-build-helper/cmake/toolchain-arm-none-eabi-gcc.cmake -DPLATFORM_NAME=stm32f4discovery -DCMAKE_BUILD_TYPE=Debug && cmake --build build/tests-stm32f4discovery-cmake-debug",
    "build-stm32f4discovery-cmake-debug-verbose": "cmake -S tests/meta -B build/tests-stm32f4discovery-cmake-debug -GNinja -DCMAKE_TOOLCHAIN_FILE=../../xpacks/micro-os-plus-build-helper/cmake/toolchain-arm-none-eabi-gcc.cmake -DPLATFORM_NAME=stm32f4discovery -DCMAKE_BUILD_TYPE=Debug && cmake --build build/tests-stm32f4discovery-cmake-debug --verbose",
    "clean-stm32f4discovery-cmake-debug": "cmake --build build/tests-stm32f4discovery-cmake-debug --verbose --target clean",
    "execute-stm32f4discovery-cmake-debug": "cd build/tests-stm32f4discovery-cmake-debug && ctest -V",
    "test-stm32f4discovery-cmake-debug": "xpm run build-stm32f4discovery-cmake-debug && xpm run execute-stm32f4discovery-cmake-debug",
    "build-stm32f4discovery-cmake-release": "cmake -S tests/meta -B build/tests-stm32f4discovery-cmake-release -GNinja -DCMAKE_TOOLCHAIN_FILE=../../xpacks/micro-os-plus-build-helper/cmake/toolchain-arm-none-eabi-gcc.cmake -DPLATFORM_NAME=stm32f4discovery -DCMAKE_BUILD_TYPE=MinSizeRel && cmake --build build/tests-stm32f4discovery-cmake-release",
    "build-stm32f4discovery-cmake-release-verbose": "cmake -S tests/meta -B build/tests-stm32f4discovery-cmake-release -GNinja -DCMAKE_TOOLCHAIN_FILE=../../xpacks/micro-os-plus-build-helper/cmake/toolchain-arm-none-eabi-gcc.cmake -DPLATFORM_NAME=stm32f4discovery -DCMAKE_BUILD_TYPE=MinSizeRel && cmake --build build/tests-stm32f4discovery-cmake-release --verbose",
    "clean-stm32f4discovery-cmake-release": "cmake --build build/tests-stm32f4discovery-cmake-release --verbose --target clean",
    "execute-stm32f4discovery-cmake-release": "cd build/tests-stm32f4discovery-cmake-release && ctest -V",
    "test-stm32f4discovery-cmake-release": "xpm run build-stm32f4discovery-cmake-release && xpm run execute-stm32f4discovery-cmake-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/micro-os-plus/micro-test-plus-xpack.git/"
  },
  "bugs": {
    "url": "https://github.com/micro-os-plus/micro-test-plus-xpack/issues/"
  },
  "homepage": "https://github.com/micro-os-plus/micro-test-plus-xpack/",
  "keywords": [
    "xpack",
    "c++",
    "testing",
    "framework",
    "micro-os-plus"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "license": "MIT",
  "config": {},
  "devDependencies": {
    "@xpack-dev-tools/cmake": "3.20.6-2.1",
    "@xpack-dev-tools/ninja-build": "1.10.2-5.1",
    "@micro-os-plus/build-helper": "github:micro-os-plus/build-helper-xpack#semver:2.1.4"
  },
  "xpack": {
    "minimumXpmRequired": "0.11.0",
    "properties": {
      "buildFolderRelativePath": "{{ 'build' | path_join: configuration.name | to_filename | downcase }}",
      "commandCMakePrepare": "cmake -S tests -B {{ properties.buildFolderRelativePath }} -G Ninja -D CMAKE_BUILD_TYPE={{ properties.buildType }} -D PLATFORM_NAME={{ properties.platformName }} -D CMAKE_EXPORT_COMPILE_COMMANDS=ON",
      "commandCMakePrepareWithToolchain": "{{ properties.commandCMakePrepare }} -D CMAKE_TOOLCHAIN_FILE=../xpacks/micro-os-plus-build-helper/cmake/{{ properties.toolchainFileName }}",
      "commandCMakeReconfigure": "{{ properties.commandCMakePrepare }}",
      "commandCMakeBuild": "cmake --build {{ properties.buildFolderRelativePath }} --verbose",
      "commandCMakeClean": "cmake --build {{ properties.buildFolderRelativePath }} --target clean",
      "commandCMakeExecuteTests": "cd {{ properties.buildFolderRelativePath }} && ctest -V"
    },
    "actions": {
      "install-all": [
        "xpm install --all-configs"
      ],
      "link-deps": [
        "xpm link @micro-os-plus/build-helper"
      ],
      "test-native": [
        "xpm run test-native-cmake",
        "xpm run test-native-cmake-gcc11",
        "xpm run test-native-cmake-clang12"
      ],
      "test-native-cmake": [
        "xpm run prepare --config native-cmake-debug",
        "xpm run build --config native-cmake-debug",
        "xpm run execute --config native-cmake-debug",
        "xpm run prepare --config native-cmake-release",
        "xpm run build --config native-cmake-release",
        "xpm run execute --config native-cmake-release"
      ],
      "test-native-cmake-gcc11": [
        "xpm run prepare --config native-cmake-gcc11-debug",
        "xpm run build --config native-cmake-gcc11-debug",
        "xpm run execute --config native-cmake-gcc11-debug",
        "xpm run prepare --config native-cmake-gcc11-release",
        "xpm run build --config native-cmake-gcc11-release",
        "xpm run execute --config native-cmake-gcc11-release"
      ],
      "test-native-cmake-clang12": [
        "xpm run prepare --config native-cmake-clang12-debug",
        "xpm run build --config native-cmake-clang12-debug",
        "xpm run execute --config native-cmake-clang12-debug",
        "xpm run prepare --config native-cmake-clang12-release",
        "xpm run build --config native-cmake-clang12-release",
        "xpm run execute --config native-cmake-clang12-release"
      ],
      "clean-all": [
        "xpm run clean --config native-cmake-debug",
        "xpm run clean --config native-cmake-release",
        "xpm run clean --config native-cmake-gcc11-debug",
        "xpm run clean --config native-cmake-gcc11-release",
        "xpm run clean --config native-cmake-clang12-debug",
        "xpm run clean --config native-cmake-clang12-release"
      ]
    },
    "buildConfigurations": {
      "native-cmake-debug": {
        "properties": {
          "buildType": "Debug",
          "platformName": "native"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepare }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandCMakeExecuteTests }}"
        }
      },
      "native-cmake-release": {
        "properties": {
          "buildType": "Release",
          "platformName": "native"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepare }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandCMakeExecuteTests }}"
        }
      },
      "native-cmake-gcc11-debug": {
        "properties": {
          "buildType": "Debug",
          "platformName": "native",
          "toolchainFileName": "toolchain-gcc.cmake"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepareWithToolchain }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandCMakeExecuteTests }}"
        },
        "devDependencies": {
          "@xpack-dev-tools/gcc": "11.2.0-1.3"
        }
      },
      "native-cmake-gcc11-release": {
        "properties": {
          "buildType": "Release",
          "platformName": "native",
          "toolchainFileName": "toolchain-gcc.cmake"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepareWithToolchain }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandCMakeExecuteTests }}"
        },
        "devDependencies": {
          "@xpack-dev-tools/gcc": "11.2.0-1.3"
        }
      },
      "native-cmake-clang12-debug": {
        "properties": {
          "buildType": "Debug",
          "platformName": "native",
          "toolchainFileName": "toolchain-clang.cmake"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepareWithToolchain }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandCMakeExecuteTests }}"
        },
        "devDependencies": {
          "@xpack-dev-tools/clang": "12.0.1-1.2"
        }
      },
      "native-cmake-clang12-release": {
        "properties": {
          "buildType": "Release",
          "platformName": "native",
          "toolchainFileName": "toolchain-clang.cmake"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepareWithToolchain }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandCMakeExecuteTests }}"
        },
        "devDependencies": {
          "@xpack-dev-tools/clang": "12.0.1-1.2"
        }
      },
      "stm32f4discovery-cmake-debug": {
        "properties": {
          "buildType": "Debug",
          "platformName": "stm32f4discovery",
          "toolchainFileName": "toolchain-arm-none-eabi-gcc.cmake",
          "qemuBoardName": "STM32F4-Discovery"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepareWithToolchain }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandExecuteHello }}"
        },
        "devDependencies": {
          "@xpack-dev-tools/arm-none-eabi-gcc": "10.2.1-1.1.2",
          "@xpack-dev-tools/qemu-arm": "2.8.0-13.1",
          "@micro-os-plus/architecture-cortexm": "github:micro-os-plus/architecture-cortexm-xpack#semver:3.0.1",
          "@micro-os-plus/devices-stm32f4-extras": "github:micro-os-plus/devices-stm32f4-extras-xpack#semver:2.0.2",
          "@micro-os-plus/diag-trace": "github:micro-os-plus/diag-trace-xpack#semver:2.1.0",
          "@micro-os-plus/libs-c": "github:micro-os-plus/libs-c-xpack#semver:2.0.1",
          "@micro-os-plus/libs-cpp": "github:micro-os-plus/libs-cpp-xpack#semver:2.0.2",
          "@micro-os-plus/platform-stm32f4discovery": "github:micro-os-plus/platform-stm32f4discovery-xpack#semver:3.0.0",
          "@micro-os-plus/semihosting": "github:micro-os-plus/semihosting-xpack#semver:3.0.1",
          "@micro-os-plus/startup": "github:micro-os-plus/startup-xpack#semver:2.0.1",
          "@micro-os-plus/version": "github:micro-os-plus/version-xpack#semver:7.0.3"
        }
      },
      "stm32f4discovery-cmake-release": {
        "properties": {
          "buildType": "MinSizeRel",
          "platformName": "stm32f4discovery",
          "toolchainFileName": "toolchain-arm-none-eabi-gcc.cmake",
          "qemuBoardName": "STM32F4-Discovery"
        },
        "actions": {
          "prepare": "{{ properties.commandCMakePrepareWithToolchain }}",
          "build": [
            "{{ properties.commandCMakeReconfigure }}",
            "{{ properties.commandCMakeBuild }}"
          ],
          "clean": "{{ properties.commandCMakeClean }}",
          "execute": "{{ properties.commandExecuteHello }}"
        },
        "devDependencies": {
          "@xpack-dev-tools/arm-none-eabi-gcc": "10.2.1-1.1.2"
        }
      }
    }
  }
}
